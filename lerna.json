{
	"lerna": "3.8.5",
	"version": "independent",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"publish": {
			"conventionalCommits": true,
			"ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish %s"
		},
		"version": {
      "allowBranch": "master"
    }
	},
	"packages": [
		"api/*"
	]
}
